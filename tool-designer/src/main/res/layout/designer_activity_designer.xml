<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/contentLayout">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?android:colorBackground"
            android:paddingEnd="12dp"
            app:menu="@menu/designer_menu"
            app:navigationIcon="@drawable/designer_ic_close"
            app:title="@string/designer_title" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/gridOverlaySwitch"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/listPreferredItemHeightSmall"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Grid overlay"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="On-screen grids help you check layouts for misaligned elements and inconsistent spacing across your app."
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:text="Colors"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Horizontal"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/horizontalLineColorValueLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/horizontalLineColorButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/designer_ic_pick"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Vertical"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/vertialLineColorValueLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/verticalLineColorButton"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/designer_ic_pick"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:text="Size"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Horizontal"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/horizontalGridSizeValueLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/horizontalGridSizeSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:stepSize="1"
                        android:value="8"
                        android:valueFrom="1"
                        android:valueTo="128" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Vertical"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/verticalGridSizeValueLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/verticalGridSizeSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:stepSize="1"
                        android:value="8"
                        android:valueFrom="1"
                        android:valueTo="128" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/mockupOverlaySwitch"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/listPreferredItemHeightSmall"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Mockup overlay"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Overlaying a mockup gives you a live preview of the screen layout as you're working."
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Opacity"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/mockupOpacityValueLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/mockupOpacitySlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:stepSize="1"
                        android:value="20"
                        android:valueFrom="0"
                        android:valueTo="100" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">

                        <FrameLayout
                            android:id="@+id/portraitMockupLayout"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:background="?attr/colorButtonNormal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/landscapeMockupLayout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/portraitLabel">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/designer_ic_add" />

                            <ImageView
                                android:id="@+id/portraitMockup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:scaleType="fitCenter" />

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/landscapeMockupLayout"
                            android:layout_width="160dp"
                            android:layout_height="0dp"
                            android:background="?attr/colorButtonNormal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/portraitMockupLayout"
                            app:layout_constraintTop_toBottomOf="@id/landscapeLabel">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/designer_ic_add" />

                            <ImageView
                                android:id="@+id/landscapeMockup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:scaleType="fitCenter" />

                        </FrameLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/portraitLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Portrait"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintBottom_toTopOf="@id/portraitMockupLayout"
                            app:layout_constraintEnd_toEndOf="@id/portraitMockupLayout"
                            app:layout_constraintStart_toStartOf="@id/portraitMockupLayout"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/landscapeLabel"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text="Landscape"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintBottom_toTopOf="@id/landscapeMockupLayout"
                            app:layout_constraintEnd_toEndOf="@id/landscapeMockupLayout"
                            app:layout_constraintStart_toStartOf="@id/landscapeMockupLayout"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/clearPortraitMockupButton"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="2dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:visibility="gone"
                            app:backgroundTint="#ff0000"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/designer_ic_remove"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:layout_constraintBottom_toBottomOf="@id/portraitMockupLayout"
                            app:layout_constraintEnd_toEndOf="@id/portraitMockupLayout"
                            app:layout_constraintStart_toStartOf="@id/portraitMockupLayout" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/clearLandscapeMockupButton"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="2dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:visibility="gone"
                            app:backgroundTint="#ff0000"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/designer_ic_remove"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:layout_constraintBottom_toBottomOf="@id/landscapeMockupLayout"
                            app:layout_constraintEnd_toEndOf="@id/landscapeMockupLayout"
                            app:layout_constraintTop_toTopOf="@id/landscapeMockupLayout" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/colorPickerSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/listPreferredItemHeightSmall"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Color picker"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Check on screen colors at the pixel level by dragging the loupe dot around."
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>