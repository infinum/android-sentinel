<?xml version="1.0" encoding="utf-8"?>
<com.infinum.designer.ui.views.magnifier.MagnifierView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/designer_magnifier_size"
    android:layout_height="@dimen/designer_magnifier_size"
    android:background="@drawable/designer_background_magnifier">

    <TextView
        android:id="@+id/colorValueView"
        android:layout_width="wrap_content"
        android:minHeight="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/designer_background_color_value"
        android:clickable="true"
        android:gravity="center"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingStart="@dimen/designer_magnifier_content_inset"
        android:paddingEnd="@dimen/designer_magnifier_content_inset"
        android:textColor="#fafafa"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="#fafafa" />

    <ImageView
        android:id="@+id/instructionsView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@drawable/designer_ic_drag" />

</com.infinum.designer.ui.views.magnifier.MagnifierView>