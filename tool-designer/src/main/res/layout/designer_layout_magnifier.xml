<?xml version="1.0" encoding="utf-8"?>
<com.infinum.designer.ui.views.magnifier.MagnifierView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/designer_picker_magnifying_ring_width"
    android:layout_height="@dimen/designer_picker_magnifying_ring_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/designer_background_magnifier">

    <TextView
        android:id="@+id/colorValueView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/designer_background_color_value"
        android:clickable="true"
        android:gravity="center"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        tools:text="#fafafa"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingStart="@dimen/designer_magnified_image_inset"
        android:paddingEnd="@dimen/designer_magnified_image_inset"
        android:textColor="#fafafa"
        android:textSize="12sp" />

</com.infinum.designer.ui.views.magnifier.MagnifierView>